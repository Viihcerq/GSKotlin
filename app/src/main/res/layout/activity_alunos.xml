<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identificação dos Participantes"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>


    <TextView
        android:id="@+id/textViewParticipant1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome: Vitoria Cerqueira"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewRM1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM: 552509"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/textViewParticipant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome: Leonardo Queiroz"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewRM2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM: 552500"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonBackToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:onClick="onBackToMainClick"/>

</LinearLayout>